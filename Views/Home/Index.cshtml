@{
    ViewData["Title"] = "Home Page";
}


<section class="hero text-white text-center d-flex align-items-center justify-content-center" 
         style="background-image: url('/images/hero-toallas.jpg'); height: 500px; background-size: cover; background-position: center;">
    <div>
        <h1 class="display-4 fw-bold">Toallas y Batas Premium</h1>
        <p class="lead">Calidad superior para el confort diario</p>
        <a class="btn btn-lg btn-light mt-3" asp-controller="Productos" asp-action="Index">Comprar Ahora</a>
    </div>
</section>


<section class="container text-center py-5">
    <h2 class="mb-4">¿Por qué elegir Corporación Textil Salas?</h2>
    <div class="row">
        <div class="col-md-4">
            <i class="bi bi-stars fs-1 text-primary"></i>
            <h5 class="mt-3">Calidad Superior</h5>
            <p>Materiales de primera que garantizan durabilidad y suavidad.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-palette fs-1 text-primary"></i>
            <h5 class="mt-3">Diseño Elegante</h5>
            <p>Estilo moderno adaptado a las últimas tendencias textiles.</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-leaf fs-1 text-primary"></i>
            <h5 class="mt-3">Compromiso Ambiental</h5>
            <p>Productos sostenibles y procesos amigables con el planeta.</p>
        </div>
    </div>
</section>


<section class="container py-5">
    <h2 class="text-center mb-4">Productos Destacados</h2>
    <div class="row g-4">
        @foreach (var p in (IEnumerable<Producto>)ViewBag.Destacados)
        {
            <div class="col-md-3">
                <div class="card h-100 shadow-sm">
                    <img src="@p.ImagenUrl" class="card-img-top" style="height:200px; object-fit:cover;" alt="@p.Nombre" />
                    <div class="card-body text-center">
                        <h5 class="card-title">@p.Nombre</h5>
                        <p class="card-text text-primary fw-semibold">S/ @p.Precio</p>
                        <a asp-controller="Productos" asp-action="Details" asp-route-id="@p.Id" class="btn btn-outline-primary btn-sm">Ver más</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>


<section class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-4">Lo que dicen nuestros clientes</h2>
        <div class="row">
            @foreach (var c in (IEnumerable<Comentario>)ViewBag.Comentarios)
            {
                <div class="col-md-4 mb-3">
                    <div class="p-4 border rounded bg-white shadow-sm h-100">
                        <p class="fst-italic">“@c.Mensaje”</p>
                        <footer class="text-end text-muted">@c.Usuario.UserName - @c.Calificacion ★</footer>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
